{
  "name": "eqpal",
  "private": true,
  "version": "0.5.3",
  "main": "main/main.js",
  "type": "module",
  "author": "Manie",
  "description": "EQPal is a log parser for the MMORPG, Everquest.",
  "scripts": {
    "dev": "concurrently \"npm run dev:react\" \"npm run dev:electron\"",
    "dev:react": "vite",
    "dev:electron": "electron .",
    "build:react": "vite build --mode=production",
    "pack": "electron-builder --dir",
    "dist:local": "npm run build:react && electron-builder --publish never --config.compression=maximum",
    "dist:publish": "cross-env GH_TOKEN=${GH_TOKEN} npm run build:react && electron-builder --publish always --config.compression=maximum",
    "deploy:functions": "cd functions && firebase deploy --only functions && cd ../",
    "postinstall": "electron-builder install-app-deps",
    "analyze": "source-map-explorer build/**/*.{js,js.map}"
  },
  "build": {
    "asar": true,
    "asarUnpack": [
      "sounds/**/*"
    ],
    "publish": {
      "provider": "github",
      "repo": "VGina",
      "owner": "paulwsully",
      "private": true,
      "releaseType": "draft"
    },
    "appId": "EQPal",
    "mac": {
      "category": "gaming.software"
    },
    "win": {
      "target": "nsis",
      "icon": "./src/assets/icon.ico",
      "artifactName": "${productName} ${version}.${ext}"
    },
    "files": [
      "sounds/**/*",
      "dist/**/*",
      "main/**/*",
      "package.json",
      "firebaseConfig.js"
    ]
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^6.5.1",
    "@fortawesome/free-solid-svg-icons": "^6.5.1",
    "@fortawesome/react-fontawesome": "^0.2.0",
    "@google-cloud/text-to-speech": "^5.0.2",
    "@supabase/supabase-js": "^2.39.6",
    "dotenv": "^16.4.1",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.1.7",
    "fast-xml-parser": "^4.3.4",
    "firebase": "^10.8.1",
    "lodash": "^4.17.21",
    "lodash.throttle": "^4.1.1",
    "node-key-sender": "^1.0.11",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.21.3",
    "sass": "^1.70.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.7",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "cross-env": "^7.0.3",
    "electron": "^28.2.0",
    "electron-builder": "^24.13.3",
    "eslint": "^8.55.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "source-map-explorer": "^2.5.3",
    "vite": "^5.0.8"
  }
}
